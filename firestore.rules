rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() &&
             (
               get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
               get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'owner'
             );
    }
    
    // Users collection - only authenticated users can read their own data, admins can manage all
    match /users/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Settings collection - anyone can read, only admins can write
    match /settings/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Time slots - TEMP: allow all authenticated users full access for migration
    match /time_slots/{slotId} {
      allow read, write: if request.auth != null;
    }
    
    // Organizations - allow authenticated users to create their own org (setup flow)
    match /organizations/{orgId} {
      allow create: if isAuthenticated() && request.resource.data.created_by == request.auth.uid;
      allow read, update, delete: if isAdmin();
      
      // Subcollections - calendars and settings (allow during setup)
      match /{document=**} {
        allow create, read, write: if isAuthenticated();
      }
    }
       
       // Calendars - TEMP: allow all authenticated users full access for migration
       match /calendars/{calendarId} {
         allow read, write: if request.auth != null;
       }

        // Appointments - org members can read their own org's appointments; admins can read/write
        match /appointments/{appointmentId} {
          allow read: if isAuthenticated() && (
            isAdmin() ||
            get(/databases/$(database)/documents/users/$(request.auth.uid)).data.org_id == resource.data.org_id
          );
          allow create, update, delete: if isAdmin();
        }
  }
}
