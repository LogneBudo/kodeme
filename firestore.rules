rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Users collection - only authenticated users can read their own data, admins can manage all
    match /users/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Settings collection - anyone can read, only admins can write
    match /settings/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Time slots - anyone can read, only admins can manage
    match /time_slots/{slotId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    // Appointments - authenticated users can create and read their own, admins can manage all
    match /appointments/{appointmentId} {
      // Anyone can read (for admin dashboard)
      allow read: if true;
      
      // Authenticated users can create appointments
      allow create: if isAuthenticated() && 
                      request.resource.data.keys().hasAll(['customerName', 'customerEmail', 'date', 'time']);
      
      // Only admins can update or delete
      allow update, delete: if isAdmin();
    }
  }
}
