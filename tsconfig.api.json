{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/api",
    "rootDir": "api",
    "module": "ESNext",
    "target": "ES2020",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": false,
    "noEmit": false,
    "isolatedModules": false
  },
  "include": ["api/**/*"],
  "exclude": ["node_modules", "dist", "src"]
}
